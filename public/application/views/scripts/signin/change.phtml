<script type="text/javascript">
	
	function checkTerms() {
        
        if($("#password").val() == '' || $("#password").val() != $("#confirm_password").val()){
        	$("#password-error").show();
        	return false;
        }else{
        	if($("#password-error").size() != 0){
        		$("#password-error").hide();
        	}
        }
    }

	
</script>

